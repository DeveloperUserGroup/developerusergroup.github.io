{
  "name": "devug",
  "version": "1.0.0",
  "repository": "https://github.com/rmaclean/devug",
  "scripts": {
    "tsc": "tsc",
    "tsc-watch": "tsc --watch",
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o css",
    "build-task:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
    "sass:build": "npm-run-all -p build-task:* purifycss",
    "dev": "npm-run-all -p tsc-watch server",
    "server": "bundle exec jekyll serve",
    "copy:bootstrap": "cpx node_modules/bootstrap/dist/js/bootstrap.min.js js",
    "copy:vanilla":"cpx node_modules/vanilla-lazyload/dist/lazyload.min.js js",
    "copy":"npm-run-all copy:*",
    "purifycss": "npx purifycss ./css/devug.css **/*.html --min --info --out ./css/devug.css"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jquery": "^3.3.6",
    "autoprefixer": "^9.1.0",
    "bootstrap": "^4.1.3",
    "cpx": "^1.5.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "purify-css": "^1.2.5"
  },
  "dependencies": {
    "vanilla-lazyload": "^10.16.0-beta"
  }
}
