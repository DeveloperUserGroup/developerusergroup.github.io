{
  "name": "devug",
  "version": "1.0.0",
  "repository": "https://github.com/rmaclean/devug",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o css",
    "build-task:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'src/scss/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*",
    "copy": "cpx node_modules/bootstrap/dist/js/bootstrap.min.js* js"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "bootstrap": "^4.1.3",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
